---
import ProyectCard from "./ProyectCard.astro";
import { proyects } from "../data/proyects";
---
<div class="proyects">
  <div class="proyects_info">
    <div class="proyects_info_header">
      <span>Proyectos</span>
      <p>Algunos de los proyectos mas importantes que he construido</p>
    </div>
  </div>
  <div class="proyects_cards">
   {
    proyects.map((proyect, index) => <ProyectCard index={index} image ={ proyect.image } name={ proyect.name } description={ proyect.description } technologies={ proyect.technologies }/>)
   }
  </div>
</div>

<style>
  .proyects {
    background: #0c0e1c;
    color: white;
  }
  .proyects_info {
    min-height: 120px;
    display: flex;
    justify-content: center;
    align-items: end;
    column-gap: 5px;
  }

  .proyects_info_header {
    text-align: center;
  }

  .proyects_info_header span {
    background: rgb(99, 98, 98);
    border-radius: 30px;
    padding: 0 10px;
    margin-top: -100px;
  }
  .proyects_info_header p {
    margin-top: 10px;
  }
  .proyects_cards {
    padding: 20px 150px;
    margin-top: 20px;
  }
</style>

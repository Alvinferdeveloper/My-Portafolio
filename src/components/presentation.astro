          <img src="computer.png" alt="computer floating" class="floating-img" />
        </div>
      </div>
    </div>
  </div>
</section>
<style>
  .inicio {
    background: linear-gradient(to right, #1d234f, #2b9cff);
    height: 80vh;
    padding: 0 20px;
  }
  .inicio .contenido {
    max-width: 1100px;
    margin: auto;
    color: #fff;
  }
  .inicio header {
    display: flex;
    justify-content: space-between;
    padding: 30px 0;
    align-items: center;
  }
  .inicio .logo {
    display: flex;
    align-items: center;
    color: #00deef;
    font-size: 25px;
  }
  .inicio .logo i {
    display: inline-block;
    margin-right: 20px;
  }
  #inicio header nav a {
    color: #fff;
    text-decoration: none;
    display: inline-block;
    padding: 5px 10px;
    text-transform: uppercase;
    border: 2px solid transparent;
  }
  #inicio header nav a:hover {
    border-bottom: 2px solid #ff5b00;
  }
  .inicio .redes a {
    text-decoration: none;
    color: #fff;
    display: inline-block;
    margin: 0 10px;
  }
  .inicio .redes a:hover {
    color: #ff5b00;
  }
  .inicio .fila {
    display: flex;
    margin-top: 50px;
    padding-bottom: 100px;
  }
  .inicio .fila .col {
    width: 50%;
  }
  .inicio .fila .col h2 {
    margin-bottom: 15px;
    font-size: 40px;
  }
  .inicio .fila .col p {
    margin-bottom: 20px;
  }

  .inicio .fila .col .contenedor-img {
    max-width: 400px;
    margin: auto;
  }
  .inicio .fila .col .contenedor-img img {
    width: 100%;
  }
  .inicio .fila .col button {
    background: none;
    width: fit-content;
    padding: 5px 40px;
    border: 2px solid #ff5b00;
    color: #fff;
    background: linear-gradient(to right, #ff5b00, #ff9900);
    transition: 0.5s;
    cursor: pointer;
  }
  .inicio .fila .col button:hover {
    transform: scale(1.1);
  }
  #icono-nav {
    height: 30px;
    width: 30px;
    text-align: center;
    line-height: 30px;
    border-radius: 50%;
    transition: 0.3s;
    cursor: pointer;
    display: none;
  }
  #icono-nav:hover {
    background-color: #3e3e3e;
  }

  @media screen and (max-width: 800px) {
    .redes {
      display: none;
    }
    #nav {
      display: none;
    }
    #nav.responsive {
      background-color: rgba(25, 0, 255, 0.9);
      top: 0;
      left: 0;
      height: 100vh;
      width: 100%;
      position: absolute;
      padding: 10px;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      z-index: 99;
    }
    #nav.responsive a {
      font-size: 30px;
    }
    #icono-nav {
      display: block;
    }

    .inicio {
      height: auto;
    }
    .inicio .fila {
      display: block;
    }
    .inicio .fila .col {
      width: 100%;
      text-align: center;
    }
    .inicio .fila .col h2 {
      margin-top: 20px;
    }
    .inicio .fila .col .contenedor-img {
      width: 50%;
      margin-top: 30px;
    }
  }
  .floating-img {
    animation: float 3s ease-in-out infinite;
    display: block;
    margin: 0 auto;
    filter: drop-shadow(0px 0px 10px rgba(0, 0, 0, 0.5));
  }
  @keyframes float {
    0% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px) scale(1.03);
    }
    100% {
      transform: translateY(0px);
    }
  }
</style>

<script>
  const responsiveMenuIcon = document.querySelector(".responsive-menu-icon");
  responsiveMenuIcon.addEventListener("click", responsiveMenu);
  function responsiveMenu() {
    let x = document.getElementById("nav");
    if (x.className === "") {
      x.className = "responsive";
      let span = document.createElement("span");
      span.innerHTML = "<i class='fa-solid fa-x'></i>";
      document.getElementById("nav").appendChild(span);
      span.onclick = function () {
        x.className = "";
        span.remove();
      };
    } else {
      x.className = "";
    }
  }

  const links = [...document.querySelectorAll("#nav a")];
  for (let i = 0; i < links.length; i++) {
    links[i].addEventListener("click", () => {
      var x = document.getElementById("nav");
      x.className = "";
      const btnEliminar = document.querySelector("#nav span");
      btnEliminar.remove();
    });
  }
</script>
